<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="br.com.cointerproject.view.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="br.com.cointerproject.view.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="br.com.cointerproject.view.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    app:startDestination="@id/cadastroInvActivity">
    <activity
        android:id="@+id/cadastroInvActivity"
        android:name="br.com.cointerproject.view.CadastroInvActivity"
        android:label="activity_cadastro_investimento"
        tools:layout="@layout/activity_cadastro_investimento" />
    <activity
        android:id="@+id/telaConsultaValores"
        android:name="br.com.cointerproject.view.TelaConsultaValores"
        android:label="activity_tela_consulta_valores"
        tools:layout="@layout/activity_tela_consulta_valores" />
    <activity
        android:id="@+id/telaLogin"
        android:name="br.com.cointerproject.ui.login.TelaLogin"
        android:label="activity_tela_login"
        tools:layout="@layout/activity_tela_login" />
    <activity
        android:id="@+id/listaInvestimentos"
        android:name="br.com.cointerproject.view.ListaInvestimentos"
        android:label="activity_lista_investimentos"
        tools:layout="@layout/activity_lista_investimentos" />
</navigation>