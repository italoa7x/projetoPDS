<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".view.CadastroActivity">


    <ImageView
        android:id="@+id/lblUser"
        android:layout_width="123dp"
        android:layout_height="126dp"
        app:layout_constraintBottom_toTopOf="@+id/campoNome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.509"
        app:srcCompat="@drawable/user" />

    <EditText
        android:id="@+id/campoNome"
        style="@style/Base.Widget.MaterialComponents.TextInputEditText"
        android:layout_width="336dp"
        android:layout_height="58dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="232dp"

        android:layout_marginEnd="24dp"
        android:backgroundTint="#E2EFDE"
        android:fontFamily="sans-serif"
        android:hint="NOME"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#00030303"
        android:textColorHint="#FFFF"
        android:textColorLink="#00000000"
        android:textCursorDrawable="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/campoEmail"
        style="@style/Base.Widget.MaterialComponents.TextInputEditText"
        android:layout_width="336dp"
        android:layout_height="58dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="316dp"

        android:layout_marginEnd="24dp"
        android:backgroundTint="#E2EFDE"
        android:fontFamily="sans-serif"
        android:hint="E-MAIL"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#00030303"
        android:textColorHint="#FFFF"
        android:textColorLink="#00000000"
        android:textCursorDrawable="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/campoSenha2"
        style="@style/Base.Widget.MaterialComponents.TextInputEditText"
        android:layout_width="334dp"
        android:layout_height="54dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"

        android:layout_marginEnd="24dp"
        android:backgroundTint="#E2EFDE"
        android:hint="SENHA"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFF"
        android:textCursorDrawable="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campoEmail" />

    <Button
        android:id="@+id/btAcessar2"
        android:layout_width="294dp"
        android:layout_height="52dp"
        android:background="#F6AE2D"
        android:fontFamily="sans-serif-light"
        android:text="Cadastrar"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campoSenha2" />


</androidx.constraintlayout.widget.ConstraintLayout>






